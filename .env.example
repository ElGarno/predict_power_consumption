# Tapo Device Credentials (if using Tapo smart devices)
TAPO_USERNAME=your_email@example.com
TAPO_PASSWORD=your_tapo_password

# Pushover Notification Service
PUSHOVER_TAPO_API_TOKEN=your_pushover_api_token_here
PUSHOVER_USER_KEY=your_pushover_user_key_here
PUSHOVER_USER_EMAIL=your_email@example.com
PUSHOVER_USER_GROUP_WOERIS=your_pushover_group_key_here

# Device IP Addresses
SOLAR_IP_ADDRESS=192.168.1.100
WASCHING_MACHINE_IP_ADDRESS=192.168.1.101
WASCHING_DRYER_IP_ADDRESS=192.168.1.102

# InfluxDB Configuration
INFLUXDB_TOKEN=your_influxdb_authentication_token_here
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=your_org_name
INFLUXDB_BUCKET=power_consumption

# Application Configuration
DATA_DIR=./data
LOG_LEVEL=INFO

# Location Configuration (for weather data)
LATITUDE=51.14
LONGITUDE=7.92
TIMEZONE=Europe/Berlin

# ML Model Configuration
MODEL_PATH=./data/model_weather_solar_power.pkl

# Overproduction Threshold Configuration
# This threshold is compared against your MONITORED devices only (smart plugs)
# For balcony solar (600-800W): Use 200-400W
# For larger systems (1-3kW): Use 500-1500W
# Set based on: average monitored consumption < threshold < solar peak
OVERPRODUCTION_THRESHOLD_WATTS=200

# Notification Configuration
NOTIFICATION_HOUR=21
NOTIFICATION_MINUTE_WINDOW=10

# Prediction Scheduling Configuration
# Mode: "daily" (once per day) or "interval" (every N seconds)
PREDICTION_MODE=daily

# Daily mode settings (when PREDICTION_MODE=daily)
DAILY_PREDICTION_HOUR=21
DAILY_PREDICTION_MINUTE=0

# Interval mode settings (when PREDICTION_MODE=interval, legacy mode)
PREDICTION_INTERVAL_SECONDS=600

# Model Retraining Schedule (weekly)
MODEL_RETRAIN_ENABLED=true
MODEL_RETRAIN_DAY=0  # 0=Monday, 1=Tuesday, ..., 6=Sunday
MODEL_RETRAIN_HOUR=3  # Early morning to avoid conflicts
MODEL_RETRAIN_MINUTE=0

# Data fetching configuration (used during retraining)
UPDATE_DATA_ON_START=false  # Not needed with scheduled retraining
UPDATE_MODEL_ON_START=false  # Not needed with scheduled retraining
GET_POWER_FROM_DB=true  # Fetch from InfluxDB during retraining
GET_WEATHER_FROM_API=true  # Fetch fresh weather during retraining
